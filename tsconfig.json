{
    "compilerOptions": {
      "lib": [
        "ES6",
        "ES5",
        "ES2017",
        "DOM",
        "DOM.Iterable"
      ],
      "target": "ES6",
      "baseUrl": "./src",
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "js-out",
      "types": ["./types"]
    },
    "exclude": [
      "dist",
      "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
  }
  