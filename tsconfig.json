{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "experimentalDecorators": true, 
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017"
    ],
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
    },
    "outDir": "./js-out",
    "typeRoots": [
      "./src/type.d.ts",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "./src"
  ]
}
